{
  "appId": "com.snapclone.app",
  "appName": "SnapClone",
  "webDir": "dist",
  "server": {
    "androidScheme": "https",
    "cleartext": true
  },
  "android": {
    "allowMixedContent": true,
    "backgroundColor": "#000000",
    "webContentsDebuggingEnabled": true
  },
  "plugins": {
    "SplashScreen": {
      "launchShowDuration": 0,
      "launchAutoHide": true,
      "backgroundColor": "#000000",
      "showSpinner": false,
      "androidScaleType": "CENTER_CROP"
    }
  }
}
